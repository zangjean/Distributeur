<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="editor.composants.templates.controller.PizzaPresetController"
         >

    <!-- Centered hover info -->
    <Label fx:id="hoverInfo"
           visible="false"
           mouseTransparent="true"
           alignment="CENTER"
           style="-fx-font-size:18px; -fx-padding:8px; -fx-background-radius:5px;"
    />
    <!-- Drop‐zone: slots laid out in a circle -->
    <AnchorPane fx:id="myOverlay">
